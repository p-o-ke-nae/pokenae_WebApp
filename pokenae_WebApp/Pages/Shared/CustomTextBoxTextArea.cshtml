@model pokenae_WebApp.Pages.CustomTextBoxTextAreaModel
@{
    string required = Model.IsRequired ? "required" : "";
    string readOnly = Model.IsReadOnly ? "readonly" : "";
    string dataValLengthMax = Model.DataValLengthMax >= 0 ? $"data-val-length-max={Model.DataValLengthMax}" : "";
    string dataValLengthMin = Model.DataValLengthMin >= 0 ? $"data-val-length-min={Model.DataValLengthMin}" : "";
}

<textarea id="@Model.Id" name="@Model.Name" class="custom-textbox" rows="@Model.Rows" @required @readOnly @dataValLengthMax @dataValLengthMin title="">@Model.Text</textarea>
